<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Feilds_for_At_Risk</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   INCLUDES(Current_State__c, &quot;At Risk&quot;),
   ISBLANK( Renewal_Save_Plan__c ))</errorConditionFormula>
    <errorDisplayField>Renewal_Save_Plan__c</errorDisplayField>
    <errorMessage>Please include a link to the Renewal Save Plan</errorMessage>
</ValidationRule>
