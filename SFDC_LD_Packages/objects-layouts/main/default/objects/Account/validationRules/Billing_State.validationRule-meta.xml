<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Billing_State</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
LEN(BillingState)&lt;3,
ISCHANGED(BillingState),
NOT(ISBLANK(BillingState))
)</errorConditionFormula>
    <errorDisplayField>BillingState</errorDisplayField>
    <errorMessage>Update the Account Address by using full State Name and not the 2 digit abbreviation</errorMessage>
</ValidationRule>
