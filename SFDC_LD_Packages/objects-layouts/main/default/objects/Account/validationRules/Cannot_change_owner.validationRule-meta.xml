<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_change_owner</fullName>
    <active>false</active>
    <errorConditionFormula>AND($UserRole.Name = &quot;Sales&quot;,
  ISCHANGED(OwnerId))</errorConditionFormula>
    <errorMessage>You cannot change the owner of this account. Please contact sales ops for assistance.</errorMessage>
</ValidationRule>
