<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_plan_type</fullName>
    <active>true</active>
    <description>What plan is the customer on or churning from?</description>
    <errorConditionFormula>AND( 
$Profile.Name &lt;&gt;&quot;System Administrator&quot;,

IsWon,
  
ISBLANK( TEXT(Plan__c) )
)</errorConditionFormula>
    <errorDisplayField>Plan__c</errorDisplayField>
    <errorMessage>What plan is the customer on?</errorMessage>
</ValidationRule>
