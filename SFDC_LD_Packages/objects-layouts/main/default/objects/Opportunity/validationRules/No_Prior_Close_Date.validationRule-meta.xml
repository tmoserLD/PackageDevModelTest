<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_Prior_Close_Date</fullName>
    <active>true</active>
    <description>NOT(ISPICKVAL(Type, &quot;Churn&quot;)),
NOT(ISPICKVAL(Type, &quot;Contraction&quot;))</description>
    <errorConditionFormula>AND(
 $User.ProfileId &lt;&gt; &quot;00e41000000iufw&quot;,
 $User.ProfileId &lt;&gt; &quot;00e1K0000022if5&quot;,
  OR(
   ISNEW(),
   ISCHANGED( CloseDate ),
   ISCHANGED( StageName )
  ),
 CloseDate &lt; TODAY()
)</errorConditionFormula>
    <errorDisplayField>CloseDate</errorDisplayField>
    <errorMessage>Close date cannot be backdated</errorMessage>
</ValidationRule>
