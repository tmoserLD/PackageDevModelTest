<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reseller</fullName>
    <active>true</active>
    <description>Required if &quot;is this is a reseller&quot; is true</description>
    <errorConditionFormula>AND(
 $User.ProfileId &lt;&gt; &quot;00e41000000iufw&quot;,
 ISPICKVAL( Is_this_a_Reseller__c, &quot;Yes&quot;),
 ISBLANK(Reseller_Customer__c)
)</errorConditionFormula>
    <errorDisplayField>Reseller_Customer__c</errorDisplayField>
    <errorMessage>Reseller Required</errorMessage>
</ValidationRule>
